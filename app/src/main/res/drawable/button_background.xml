<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- 배경색 -->
            <corners android:radius="0.85rem"/> <!-- 모서리 둥글기 -->
            <stroke
                android:width="1dp"
                android:color="#bebebe"/> <!-- 테두리 -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>
    <item android:right="1dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="0.85rem"/>
            <stroke
                android:width="1dp"
                android:color="#e2e2e2"/>
        </shape>
    </item>
</layer-list>
