<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="@string/back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backButton"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/formContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Title -->
            <TextView
                android:id="@+id/mainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="재미보따리는\n여러분의 재미있는 이야기를 듣고 싶어요!"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <!-- Fake Option Label -->
            <TextView
                android:id="@+id/fakeOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:background="@drawable/fake_option_background"
                android:text="어떤 이야기가 하고 싶나요?"
                android:textSize="14sp"
                android:textColor="#000000" />

            <!-- Title Label and Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/titleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="제목을 적어 주세요."
                android:background="#f5f5f5"
                android:padding="8dp" />

            <!-- Question Label and Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질문"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/questionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="질문을 차례 대로 적어 주세요."
                android:background="#f5f5f5"
                android:padding="8dp"
                android:minHeight="120dp"
                android:gravity="top|start"
                android:inputType="textMultiLine" />

            <!-- Answer Label and Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="답변"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/answerInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:gravity="top|start"
                android:hint="질문에 대한 답변을 적어 주세요 예)1번질문 답변 1)xx 2)xx"
                android:inputType="textMultiLine"
                android:minHeight="120dp"
                android:padding="8dp" />

            <!-- Result Label and Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결과"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/resultInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="결과를 작성 해 주세요."
                android:background="#f5f5f5"
                android:padding="8dp"
                android:minHeight="120dp"
                android:gravity="top|start"
                android:inputType="textMultiLine" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보내기"
                android:background="#ffd524"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="24dp"
                android:padding="12dp" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
