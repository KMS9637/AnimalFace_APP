<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical">

        <!-- Menu icon (Hamburger icon) -->
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical">

            <CheckBox
                android:id="@+id/menuicon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:button="@null"
                android:gravity="center"/>

            <!-- Menu icon lines -->
            <View
                android:id="@+id/menuIconLine1"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:background="@android:color/black"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp"/>

            <View
                android:id="@+id/menuIconLine2"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:background="@android:color/black"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"/>

            <View
                android:id="@+id/menuIconLine3"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:background="@android:color/black"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>

        <!-- Spacer to center the logo -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/mainlogo2"
            android:contentDescription="Main Logo"/>

        <!-- Spacer to center the logo -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- My Page -->
        <ImageView
            android:id="@+id/mypage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mypage"
            android:contentDescription="My Page"/>
    </LinearLayout>

    <!-- Sidebar Section -->
    <RelativeLayout
        android:id="@+id/sidebar"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#deb887"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-200dp"
        android:layout_marginLeft="-200dp"/>

    <!-- Content Section -->
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
